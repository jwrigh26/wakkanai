const path = require('path');
const runCommand = ({alpha, beta}) => {
  console.log('Running yaml processing stuff');
  console.log('DIR', path.parse(process.cwd()));
  console.log('alpha: ', alpha);
  console.log('beta:', beta);
};

const secretCommand = ({token}) => {
  console.log('The secret is burgers rule!');
  console.log('Token:', token);
};

module.exports = require('yargs')
  .usage('Usage: $0 <command> [options]')
  .command(
    'run',
    'Process yaml file of images',
    yargs => {
      // Run command options
      return yargs.option('alpha').option('beta');
    },
    runCommand
  )
  .command(
    'secret',
    'Reveal a secret to the user',
    yargs => {
      // Secret command options
      return yargs.option('token');
    },
    secretCommand
  )
  .help().argv;

